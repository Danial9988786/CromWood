@model Guid;

<div class="modal-content rounded-0">
    <div class="modal-header py-2">
        <h5 class="modal-title" id="staticBackdropLabel">Block User</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
        <div class="row justify-content-center text-center">
            <div class="col-7">
                <img src="./assets/img/Remove_user_imig.svg" alt="remove_user">
                <p>Are you sure you wan to block <b>User</b> from your team?</p>
            </div>
        </div>

        <div class="text-end border-top pt-3 d-flex justify-content-between" data-bs-dismiss="modal">
            <div class="custom__btn">
                <a href="#">
                    Cancel
                </a>
            </div>
            <form asp-action="BlockUser" asp-route-Id="@Model">
                <div class="custom__btn3">
                    <input type="submit" value="Block" />
                </div>
            </form>
        </div>
    </div>
</div>