@model Guid;
@{
    var name = ViewBag.Name;
}

<div class="modal-content i_n_m rounded-0">
    <div class="modal-header py-10">
        <h5 class="modal-title" id="staticBackdropLabel">Block User</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body p-0">
        <div class="row justify-content-center text-center">
            <div class="col-7 pt-4">
                <img src="~/assets/img/Remove_user_imig.svg" alt="remove_user">
                <p class="r_m_s mb-0">Are you sure you want to block <b>@name</b> from your system?</p>
            </div>
        </div>

        <div class="popup_footer_fixed border-top d-flex justify-content-between" data-bs-dismiss="modal">
            <div class="shadow-box">
                <a class="custom__btn" href="#">
                    Cancel
                </a>
            </div>
            <form asp-action="BlockUser" asp-route-Id="@Model">
                <div class="shadow-box ms-auto">
                    <a onclick="confirmBtn.click()" class="custom__btn3">Confirm</a>
                    <input id="confirmBtn" hidden class="custom__btn3" type="submit" value="Confirm" />
                </div>
            </form>

        </div>
    </div>
</div>