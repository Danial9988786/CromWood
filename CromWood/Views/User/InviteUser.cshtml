@using CromWood.Business.Services.Interface;
@inject IRolePermissionService _rolePermisssion;
@model CromWood.Business.Models.UserModel

@{
    var asyncRoles= await _rolePermisssion.GetRolesAsync();
    var roles = new SelectList(asyncRoles.Data, "Id", "Name");
}

<div class="modal-content i_n_m rounded-0">
    <div class="modal-header py-10">
            <h5 class="modal-title" id="staticBackdropLabel">Invite New Member</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body p-0">
        <form asp-action="InviteUser">
            @* <div asp-validation-summary="ModelOnly" class="text-danger"></div> *@
            <div class="row px-3 pt-2">
                    <div class="col-xl-6">
                        <div class="mb-3">
                        <label asp-for="Name" class="form-label">User's Name</label>
                        <input type="text" class="form-control h-40 pagagraph" asp-for="Name"
                                   placeholder="Enter Name Here">
                        <span asp-validation-for="Name" class="text-danger sm_select_text"></span>
                        </div>
                    </div>
                    <div class="col-xl-6">
                        <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email Address</label>
                        <input type="email" class="form-control h-40 pagagraph" asp-for="Email"
                                   placeholder="Enter Email Address Here">
                        <span asp-validation-for="Email" class="text-danger sm_select_text"></span>
                        </div>
                    </div>
                    <div class="col-xl-6">
                        <div class="mb-3">
                        <label asp-for="Password" class="form-label">Default Password</label>
                        <input type="password" class="form-control h-40 pagagraph" asp-for="Password"
                                   placeholder="Enter Default Password">
                        <span asp-validation-for="Password" class="text-danger sm_select_text"></span>
                        </div>
                    </div>
                    <div class="col-xl-6">
                        <div class="mb-3">
                        <label asp-for="RoleId" class="form-label">Role</label>
                        <select class="form-select select_font_14 pagagraph" asp-for=RoleId asp-items="roles">
                        </select>
                        <span asp-validation-for="RoleId" class="text-danger sm_select_text"></span>
                        </div>
                    </div>
                </div>
            <div class="popup_footer_fixed border-top">
                <div>
                    <div class="shadow-box ms-auto">
                        <a onclick="confirmBtn.click()" class="custom__btn2">Invite</a>
                        <input id="confirmBtn" hidden type="submit" value="Invite" />
                    </div>
                </div>
            </div>
            </form>
        </div>
    </div>

<script>

    $(document).ready(function () {
        $('.select_font_14').select2({
            theme: "bootstrap-5",
            width: $(this).data('width') ? $(this).data('width') : $(this).hasClass('w-100') ? '100%' : 'style',
            placeholder: $(this).data('placeholder'),
            closeOnSelect: true,
            dropdownCssClass: "select_font_14",
        });
    })

</script>