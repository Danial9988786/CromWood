        function encodeFilterCondition(type, first, second, third, fourth) {
            if (type == "Guid") {
                if (second == "eq") {
                    return `x.${first}==Guid.Parse("${third}")`;
                }
                if (second == "inl") {
                    return `${first}==${third}`;
                }
            }
            if (type == "String") {
                if (second == "eq") {
                    return `x.${first}=="${third}"`;
                }
                if (second == "ct") {
                    return `x.${first}.Contains("${third}")`;
                }
                if (second == "dct") {
                    return `!x.${first}.Contains("${third}")`;
                }
                if (second == "ie") {
                    return `x.${first}.IsNullOrEmpty()`;
                }
                if (second == "ine") {
                    return `!x.${first}.IsNullOrEmpty()`;
                }
            }

            if (type == "Int32" || type == "Single") {
                if (second == "eq") {
                    return `x.${first}==${third}`;
                }
                if (second == "mt") {
                    return `x.${first}>${third}`;
                }
                if (second == "mte") {
                    return `x.${first}>=${third}`;
                }
                if (second == "lt") {
                    return `x.${first}<${third}`;
                }
                if (second == "lte") {
                    return `x.${first}<=${third}`;
                }
                if (second == "in") {
                    return `x.${first}>${third} && x.${first}<${fourth}`;
                }
            }

            if (type == "DateTime") {
                if (second == "eq") {
                    return `x.${first}==${third}`;
                }
                if (second == "in") {
                    return `x.${first}>${third} && x.${first}<${fourth}`;
                }
                if (second == "iet") {
                    return `x.${first}>${third}`;
                }
                if (second == "ilt") {
                    return `x.${first}<${third}`;
                }
            }
            if (type == "Boolean") {
                if (second == "eqt") {
                    return `x.${first}`;
                }
                if (second == "eqf") {
                    return `!x.${first}`;
                }
            }
        }
