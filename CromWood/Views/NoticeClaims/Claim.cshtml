@model IEnumerable<CromWood.Business.Models.ViewModel.ClaimViewModel>

@{
    ViewData["Title"] = "Claim";
    Layout = "~/Views/Shared/_NoticeClaim.cshtml";
    string emptyGuid = "'" + Guid.Empty.ToString() + "'";
}

<h1>Claim</h1>

<a onclick="AddModifyClaim(@emptyGuid)">Create New</a>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenantId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClaimReference)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClaimNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HearingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Action)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TenantId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClaimReference)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClaimNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fee)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HearingDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Action)
                </td>
                <td>
                    @{
                        string id = "'" + item.Id.ToString() + "'";
                    }
                    <a onclick="AddModifyClaim(@id)">Edit</a>
                    <a onclick="DeleteClaim(@id)">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


<div class="modal fade" id="claimDialog">
    <div class="modal-dialog modal-dialog-centered" id="claimDialogBody">
    </div>
</div>


<script>
    function AddModifyClaim(claimId) {
        var url = `/NoticeClaims/AddModifyClaim?id=${claimId}`;
        $("#claimDialogBody").load(url, function () {
            // This is done to add validation to partial view, as they don't support validationscript partial.
            $.getScript("https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js", function () {
                $.getScript("https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js", function () {
                });
            });
            $("#claimDialogBody").css("width", "100%");
            $("#claimDialog").modal("show");
        });
    }

    function DeleteClaim(claimId) {
        $.ajax({
            type: "POST",
            url: `/NoticeClaims/DeleteClaim?id=${claimId}`,
            success: function (result) {
                window.location.reload();
            },
            error: function () {
            }
        })
    }

</script>