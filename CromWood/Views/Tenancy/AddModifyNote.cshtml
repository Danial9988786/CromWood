@model CromWood.Business.Models.TenancyNoteModel

<div class="modal-content rounded-0">
    <div class="modal-header py-2">
        <h5 class="modal-title" id="staticBackdropLabel">Add Note</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
        <form asp-action="AddModifyNote" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(m=>m.Id)
           
            <div class="form-group">
                <label asp-for="Note" class="control-label"></label>
                <input asp-for="Note" class="form-control" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScheduleForLater" class="control-label"></label>
                <input asp-for="ScheduleForLater" type="checkbox" class="form-control" />
                <span asp-validation-for="ScheduleForLater" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScheduleDateTime" class="control-label"></label>
                <input asp-for="ScheduleDateTime" class="form-control" />
                <span asp-validation-for="ScheduleDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="File" class="form-control" />
            </div>
            @Html.HiddenFor(m=>m.TenancyId)
            @Html.HiddenFor(m=>m.FileUrl)
            <div  class="text-end border-top pt-3 mt-5">
                <input class="custom__btn2" type="submit" value="Add Note" />
            </div>
        </form>
    </div>
</div>
