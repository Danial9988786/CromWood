@model Guid;

<div class="modal-content rounded-0">
    <div class="modal-header py-2">
        <h5 class="modal-title" id="staticBackdropLabel">Remove Role</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body p-0">
        <div class="row justify-content-center text-center">
            <div class="col-7">
                <img src="~/assets/img/Remove_user_imig.svg" alt="remove_user">
                <p>Are you sure you want to remove this role from the system. It will also delete all users having this rolw.</p>
            </div>
        </div>

        <hr class="c_border mt-5 mb-0" />
        <div class="text-end px-3 pt-2 pb-3 d-flex justify-content-between" data-bs-dismiss="modal">
                <a class="custom__btn" href="#">
                    Cancel
                </a>
            <form asp-action="DeleteRole" asp-route-Id="@Model">
                    <input class="custom__btn3" type="submit" value="Delete" />
            </form>
        </div>
    </div>
</div>