@model Guid;

<div class="modal-content i_n_m rounded-0">
    <div class="modal-header py-10">
        <h5 class="modal-title" id="staticBackdropLabel">Remove Role</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body p-0">
        <div class="row justify-content-center text-center">
            <div class="col-7 pt-4">
                <img src="~/assets/img/Remove_user_imig.svg" alt="remove_user">
                <p class="r_m_s">Are you sure you want to remove this role from the system. It will also delete all users having this role.</p>
            </div>
        </div>

        <hr class="c_border mt-5 mb-0" />
        <div class="text-end px-3 py-10 pb-3 d-flex justify-content-between" data-bs-dismiss="modal">
            <div class="shadow-box">
                <a href="#" class="custom__btn">
                    Cancel
                </a>
            </div>
            <form asp-action="DeleteRole" asp-route-Id="@Model">
                <div class="shadow-box">
                    <a onclick="confirmBtn.click()" class="custom__btn3">Confirm</a>
                    <input id="confirmBtn" hidden class="custom__btn3" type="submit" value="Confirm" />
                </div>
            </form>
        </div>
    </div>
</div>